@model ViewModels.AdminViewModel.Gabz.Vm_Gabz;
<div class="card shadow">
	<div class="card-header">
		<h2 class="mb-0">درخواست پین شارژ</h2>
	</div>
	<div class="card-body">
		<form action="/Admin/Gabz/ShowBuyAChargIngPin" method="POST">
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<h2 class="mb-0"> شماره همراه :</h2>
						<input type="text" class="form-control" asp-for="mobile_number" placeholder=" شماره همراه ">
					</div>

					<div class="form-group">
						<h2 class="mb-0"> مبلغ : </h2>
						<input type="text" class="form-control" asp-for="amount" placeholder=" مبلغ ">
					</div>

					<div class="form-group">
						<h2 class="mb-0"> سرویس پرداخت : </h2>
						<input type="text" class="form-control" asp-for="payment_service_id"
							placeholder=" سرویس پرداخت ">
					</div>
				</div>
				<div class="col-md-6">

					<div class="form-group">
						<h2 class="mb-0"> شماره کارت : </h2>
						<input type="text" class="form-control" asp-for="pan" placeholder="شماره کارت">
					</div>

					@* <div class="form-group">
	 	<h2 class="mb-0"> نوع رمز کارت : </h2>
	 	<input type="text" class="form-control" name="input" placeholder=" نوع رمز کارت ">
	 	</div> *@

					<div class="form-group">
						<h2 class="mb-0"> رمز کارت : </h2>
						<input type="text" class="form-control" asp-for="pin" placeholder=" رمز کارت ">
					</div>

					<div class="form-group">
						<h2 class="mb-0"> کد cvv2 کارت : </h2>
						<input type="text" class="form-control" asp-for="cvv2" placeholder=" کد cvv2 کارت ">
					</div>

					<div class="form-group">
						<h2 class="mb-0"> تاریخ انقضای کارت : </h2>
						<input type="text" class="form-control" asp-for="exp_date" placeholder=" تاریخ انقضای کارت ">
					</div>
				</div>
				<button type="submit" class="btn btn-success  mt-1 mb-1" style="width: min-content;"> درخواست شارژ
				</button>
				<a href="~/Admin/Gabz_Charge/Estelam" class="btn btn-success mt-1 mb-1" style="width: min-content;">
					بازگشت
				</a>
			</div>
		</form>
	</div>
</div>