@model ViewModels.AdminViewModel.Hesab.Vm_Hesab;
<div class="card shadow">
    <div class="card-header">
        <h2 class="mb-0">اطلاعات حساب بانکی </h2>
    </div>
    <div class="card-body"> @if (ViewBag.msg != null)
            {
                <div class="text-center">
                    <p class="alert alert-success">@ViewBag.msg</p>
                </div>
            }
        <div class="row">
           
            <div class="col-md-6">
                <form action="/Admin/Hesab/Index2" method="POST">
                    <div class="form-group">
                        <h2 class="mb-0">نام بانک :</h2>
                        <input type="text" class="form-control" placeholder="نام بانک را وارد کنید : " required
                            asp-for="Bank">
                    </div>
                    <div class="form-group">
                        <h2 class="mb-0">شماره حساب :</h2>
                        <input type="text" class="form-control" placeholder="شماره حساب خود را وارد کنید : " required
                            asp-for="Hesab">
                    </div>
                    <div class="form-group">
                        <h2 class="mb-0">شماره شبا :</h2>
                        <input type="text" class="form-control" placeholder="شماره شبا خود را وارد کنید : " required
                            asp-for="Shaba">
                    </div>
                    <div class="form-group">
                        <h2 class="mb-0">کد شعبه :</h2>
                        <input type="text" class="form-control" placeholder="کد شعبه خود را وارد کنید : " required
                            asp-for="Shobe">
                    </div>
                    <div>
                        <button type="submit" class="btn btn-success  mt-1 mb-1" style="width: min-content;"> ثبت
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>