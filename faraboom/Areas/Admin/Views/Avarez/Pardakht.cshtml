@model ViewModels.AdminViewModel.Avarez.Vm_Avarez;
<div class="card shadow">
	<div class="card-header">
        <h2 class="mb-0">  پرداخت بدهی عوارض آزادراه </h2>
	</div>
	<div class="card-body">
		<div class="row">
			<div class="col-md-6">
				<form action="/Admin/Avarez/ShowPardakht" method="POST">
					<div class="form-group">
						<h2 class="mb-0"> شناسه قبض :</h2>
						<input type="text" class="form-control" placeholder="شناسه قبض را وارد کنید :  " required asp-for="bill_id">
					</div>
					<div class="form-group">
						<h2 class="mb-0"> مبلغ :</h2>
						<input type="text" class="form-control" placeholder=" مبلغ پرداختی را وارد کنید :" required asp-for="amount">
					</div>
					<div class="form-group">
						<h2 class="mb-0"> شماره مرجع   :</h2>
						<input type="text" class="form-control" placeholder="شماره مرجع را وارد کنید : " required asp-for="reference">
					</div>
					<div class="form-group">
						<h2 class="mb-0"> Token :</h2>
						<input type="text" class="form-control" placeholder="Token" required asp-for="Token">
					</div>
					<div>
						<button type="submit" class="btn btn-success  mt-1 mb-1" style="width: min-content;"> استعلام
						</button>
						<a href="~/Admin/Avarez/index" class="btn btn-success mt-1 mb-1" style="width: min-content;">
							بازگشت
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>