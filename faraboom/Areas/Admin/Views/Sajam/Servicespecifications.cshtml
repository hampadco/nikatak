
@{
    Layout = "_Layout4" ;
}
@model ViewModels.AdminViewModel.sajam.Vm_Showinfo;
<div class="card shadow">
	<div class="card-header">
		<h2 class="mb-0"> مشخصات خدمت سمت احرازهویت کننده </h2>
	</div>
	<div class="card-body">
		<form action="/Admin/sajam/Showinfo">
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<h2 class="mb-0"> شناسه سرویس:</h2>
						<input type="text" class="form-control" name="input" placeholder="  شناسه سرویس را وارد کنید :    ">
						<p id="tok" style="display:none;">@ViewBag.result</p>
						<input style="display:none;" asp-for="token">
						<p id="sevaice" style="display:none;">@ViewBag.result</p>
						<input style="display:none;" asp-for="service_id">
					</div>
					<button type="submit" class="btn btn-success  mt-3 mb-1" style="width: min-content;"> دریافت مشخصات
					</button>
					<a href="~/Admin/Sajam/Index" class="btn btn-success mt-3 mb-1" style="width: min-content;">
						بازگشت
					</a>
				</div>
			</div>
		</form>
	</div>
</div>

<script>

	debugger
	var str = document.getElementById('tok').innerText.replace("{", "").replace(' \" ', '').replace("}", "").split('"').join('');
	var res = str.split(",");

	var bill_id = res[1].split(":");
	document.getElementById('token').value = bill_id[1];

	var str = document.getElementById('sevaice').innerText.replace("{", "").replace(' \" ', '').replace("}", "").split('"').join('');
	var res = str.split(",");

	var bill_id = res[2].split(":");
	document.getElementById('service_id').value = bill_id[2];


</script>