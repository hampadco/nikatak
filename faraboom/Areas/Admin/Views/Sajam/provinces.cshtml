@model ViewModels.AdminViewModel.sajam.Vm_provinces;
@{
    Layout = "_Layout4" ;
}

<div class="card shadow">
	<div class="card-header">
		<h2 class="mb-0"> لیست استانها ها </h2>
	</div>
	<div class="card-body">
		<form action="/Admin/sajam/Showprovinces">
			<div class="row">
				<div class="form-group">
					<h2 class="mb-0"> کد کشور : </h2>
					<input type="text" class="form-control" asp-for="country_id" placeholder="کد کشور موردنظر را وارد کنید : ">
					<p id="tok" style="display:none;">@ViewBag.result</p>
					<input style="display:none;" asp-for="token">
					@* <p id="idcount" style="display:none;">@ViewBag.result</p>
					<input style="display:none;" asp-for="country_id"> *@
					<button type="submit" class="btn btn-success  mt-3 mb-1" style="width: min-content;"> بررسی استانها
					</button>
					<a href="~/Admin/Sajam/Index" class="btn btn-success mt-3 mb-1" style="width: min-content;">
						بازگشت
					</a>
				</div>
			</div>
		</form>
	</div>
</div>

<script>

	debugger
	var str = document.getElementById('tok').innerText.replace("{", "").replace(' \" ', '').replace("}", "").split('"').join('');
	var res = str.split(",");

	var bill_id = res[1].split(":");
	document.getElementById('token').value = bill_id[1];

	var str = document.getElementById('idcount').innerText.replace("{", "").replace(' \" ', '').replace("}", "").split('"').join('');
	var res = str.split(",");

	var bill_id = res[2].split(":");
	document.getElementById('country_id').value = bill_id[2];

	var str = document.getElementById('idpro').innerText.replace("{", "").replace(' \" ', '').replace("}", "").split('"').join('');
	var res = str.split(",");

	var bill_id = res[3].split(":");
	document.getElementById('province_id').value = bill_id[3];

</script>
