@model ViewModels.AdminViewModel.sajam.Vm_sections;
@{
    Layout = "_Layout4" ;
}


<div class="card shadow">
	<div class="card-header">
		<h2 class="mb-0"> لیست بخش ها </h2>
	</div>
	<div class="card-body">
		<form action="/Admin/sajam/Showsections">
			<div class="row">
				<div class="form-group">
					<h2 class="mb-0"> کد کشور : </h2>
					<input type="text" class="form-control" asp-for="country_id"
						placeholder="کد کشور موردنظر را وارد کنید :  ">
				</div>
			</div>
			<div class="row">
				<div class="form-group">
					<h2 class="mb-0"> کد استان : </h2>
					<input type="text" class="form-control" asp-for="province_id"
						placeholder="کد استان موردنظر را وارد کنید :    ">
				</div>
			</div>
			<div class="row">
				<div class="form-group">
					<h2 class="mb-0"> کد شهر : </h2>
					<input type="text" class="form-control" asp-for="city_id"
						placeholder="کد شهر موردنظر را وارد کنید :    ">
				</div>
			</div>
			<button type="submit" class="btn btn-success  mt-3 mb-1" style="width: min-content;"> بررسی بخش ها
			</button>
			<a href="~/Admin/Sajam/Index" class="btn btn-success mt-3 mb-1" style="width: min-content;">
				بازگشت
			</a>
		</form>
	</div>
</div>
<p id="tok" style="display:none;">@ViewBag.result</p>
<input style="display:none;" asp-for="token">
