@model ViewModels.AdminViewModel.sajam.Vm_Checkprofile;
@{
    Layout = "_Layout4" ;
}
<div class="card shadow">
	<div class="card-header">
		<h2 class="mb-0"> بررسی مشخصات پروفایل سجام </h2>
	</div>
	<form action="/Admin/Sajam/ShowCheckprofile" method="POST">
		<div class="card-body">
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<h2 class="mb-0"> شماره موبایل :</h2>
						<input type="text" class="form-control" asp-for="mobile" placeholder=" شماره موبایل  ">
					</div>

					<div class="form-group">
						<h2 class="mb-0"> رمز یکبار مصرف : </h2>
						<input type="text" class="form-control" asp-for="otp" placeholder="رمز یکبار مصرف  ">
					</div>

					<div class="form-group">
						<h2 class="mb-0"> کد ملی : </h2>
						<input type="text" class="form-control" asp-for="identifier" placeholder=" کد ملی ">
					</div>
					@* <div class="form-group">
	 				h2 class="mb-0"> otp : </h2>
	 				input type="text" class="form-control" name="input" placeholder="otp " >
	 				/div> *@
					<button type="submit" class="btn btn-success  mt-1 mb-1" style="width: min-content;"> بررسی پروفایل
					</button>
					<a href="~/Admin/Sajam/Index" class="btn btn-success mt-1 mb-1" style="width: min-content;">
						بازگشت
					</a>

				</div>
			</div>
		</div>
		<p id="tok" style="display:none;">@ViewBag.result</p>
		<input style="display:none;" asp-for="token">
	</form>
</div>
</div>
<script>

	debugger
	var str = document.getElementById('tok').innerText.replace("{", "").replace(' \" ', '').replace("}", "").split('"').join('');
	var res = str.split(",");

	var bill_id = res[1].split(":");
	document.getElementById('token').value = bill_id[1];

</script>