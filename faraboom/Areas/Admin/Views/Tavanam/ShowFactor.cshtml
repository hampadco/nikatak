<div class="card shadow">
	<div class="card-header">
		<h2 class="mb-0">نمایش فاکتور احراز هویت</h2>
	</div>
	<div class="card-body">
		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<p id="S_F" style=" display:none ;">@ViewBag.result</p>
					@if (ViewBag.Msg != null)
					{
		  				<div class="text-center">
		  				 <p class="alert alert-danger">@ViewBag.Msg</p>
		  				</div>
					}
					<table class="table table-hover">
						<thead class="bg-primary">
							<tr>
								<th> شماره فاکتور </th>
								<th> مبلغ </th>
							<tr>
						</thead>
						<tbody class="bg-white">
							<tr>
								<th id="factor_id"></th>
								<th>12,000 تومان</th>
							</tr>
						</tbody>
					</table>
					<div class="d-flex justify-content-end ">
						<a href="~/Admin/Tavanam/Index" class="btn btn-success mt-1 mb-1" style="width: min-content;">
							بازگشت
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	debugger
	var str = document.getElementById('S_F').innerText.replace("{", "").replace(' \" ', '').replace("}", "").split('"').join('');
	var res = str.split(",");

	var factor_id = res[1].split(":");
	document.getElementById('factor_id').innerText = "" + factor_id[1];

	var amount = res[2].split(":");
	document.getElementById('amount').innerText = "" + amount[1];

</script>